{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" }, 
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@reality/*": ["01_REALITY/*"],
      "@digital-twin/*": ["02_DIGITAL_TWIN/*"],
      "@ai/*": ["03_AI_LOGIC/*"],
      "@ui/*": ["04_USER_INTERFACE/*"],
      "@infrastructure/*": ["05_INFRASTRUCTURE/*"],
      "@shared/*": ["06_SHARED/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  },
  "include": [
    "01_REALITY",
    "02_DIGITAL_TWIN",
    "03_AI_LOGIC",
    "04_USER_INTERFACE",
    "05_INFRASTRUCTURE",
    "06_SHARED",
    "07_DOCUMENTATION",
    "08_TESTING"
  ]
}
